---
name: register-broker

templates:
  run.erb: bin/run

packages: []

properties:
  cf.api_url:
    description: "Cloud Foundry API URL"
  cf.admin_username:
    description: "Cloud Foundry admin username"
    default: "admin"
  cf.admin_password:
    description: "Cloud Foundry admin password"
  cf.skip_ssl_validation:
    description: "Skip SSL validation when connecting to CF"
    default: false

  broker.name:
    description: "Name to register the broker as"
    default: "seaweedfs"
  broker.url:
    description: "URL of the service broker"
  broker.username:
    description: "Service broker username"
  broker.password:
    description: "Service broker password"
  broker.enable_service_access:
    description: "Enable service access for all orgs after registration"
    default: true
