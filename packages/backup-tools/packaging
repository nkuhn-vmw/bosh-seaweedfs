#!/bin/bash
set -e -x

# Install AWS CLI v2
# Extract in compile directory (not /tmp which is noexec on BOSH compilation VMs)
unzip backup-tools/awscli-exe-linux-x86_64.zip

# Bypass the install script entirely â€” it tries to exec binaries from the
# extract dir which also fails on noexec. Just copy the dist directly.
mkdir -p "${BOSH_INSTALL_TARGET}/bin"
cp -a aws/dist "${BOSH_INSTALL_TARGET}/dist"
chmod +x "${BOSH_INSTALL_TARGET}/dist/aws"
ln -sf ../dist/aws "${BOSH_INSTALL_TARGET}/bin/aws"
